{
  "compilerOptions": {
    "target": "es2016", // Versión de JS a generar
    "module": "commonjs", // Sistema de módulos de Node.js
    "rootDir": "./src", // Carpeta con tu código TS original
    "outDir": "./dist", // Carpeta donde se genera JS compilado
    "esModuleInterop": true, // Para importar módulos CommonJS sin problemas
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Habilita reglas estrictas de tipo
    "skipLibCheck": true, // Evita revisar tipos de dependencias externas
    "sourceMap": true // Genera mapas para debugging (opcional)
  },
  "include": ["src/**/*"], // Archivos que se compilan
  "exclude": ["node_modules", "dist"] // Archivos ignorados en compilación
}
